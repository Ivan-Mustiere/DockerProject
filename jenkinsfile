pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Ivan-Mustiere/DockerProject'
            }
        }
        stage('Build') {
            steps {
                sh 'docker build -t monapp .'
            }
        }
        stage('Test') {
            steps {
                // Ajoutez ici vos tests automatis√©s
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker-compose up -d'
            }
        }
    }
}