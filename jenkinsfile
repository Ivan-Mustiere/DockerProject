pipeline {
    agent any

    stages {
stage('Checkout') {
            steps {
                git 'https://github.com/Ivan-Mustiere/DockerProject.git'
            }
  
        stage('Construction de image Docker') {
            steps {
                script {
                    
                    docker.build('projet_g4')
                }
            }
        }
        stage('DÃ©ploiement du conteneur Docker') {
            steps {
                
                script {
                    docker.withRegistry('https://registry.example.com', 'credentials-id') {
                        docker.image('projet_g4').push('latest')
                    }
                }
            }
        }
    }
}
